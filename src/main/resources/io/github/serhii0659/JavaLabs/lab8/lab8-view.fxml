<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="rootPane" prefHeight="650.0" prefWidth="900.0" styleClass="main-window" xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.serhii0659.JavaLabs.lab8.Lab8Controller">
    <top>
        <HBox alignment="CENTER_LEFT" onMouseDragged="#handleWindowDrag" onMousePressed="#handleWindowPress" styleClass="custom-title-bar">
            <Label styleClass="title-bar-label" text="Лабораторна робота №8: Масиви" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#closeWindow" styleClass="title-bar-button, close-button"><graphic><FontIcon iconLiteral="fas-times" iconColor="#a8b2c1"/></graphic></Button>
        </HBox>
    </top>
    <center>
        <VBox spacing="15.0" styleClass="vbox-container">
            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Показати меню" onAction="#onShowMenu" styleClass="button-primary"/>
                <Button text="Сорт: Дешеві -> Дорогі" onAction="#onSortAsc" styleClass="button"/>
                <Button text="Сорт: Дорогі -> Дешеві" onAction="#onSortDesc" styleClass="button"/>
            </HBox>

            <Separator />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Пошук (max ціна):" styleClass="label"/>
                <TextField fx:id="filterPriceField" promptText="100.00" prefWidth="100.0"/>
                <Button text="Знайти" onAction="#onFilter" styleClass="button"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Зміна ціни:" styleClass="label"/>
                <TextField fx:id="editIdField" promptText="ID (0-9)" prefWidth="80.0"/>
                <TextField fx:id="editPriceField" promptText="Нова ціна" prefWidth="100.0"/>
                <Button text="Змінити" onAction="#onModify" styleClass="button"/>
            </HBox>

            <Label text="Результат виконання:" styleClass="label-info"/>
            <TextArea fx:id="outputArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" styleClass="text-area" style="-fx-font-family: 'Consolas', 'Courier New', monospace;"/>
        </VBox>
    </center>
</BorderPane>